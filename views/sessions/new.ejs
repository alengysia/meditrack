  <body class="login">
    <div class="login-container">
      <nav>
      <div class="login-nav">
        <form class="home" action="/" method="get">
            <Input type="Submit" value="Home"></Input>
        </form>
        <form class= "signup" action="/users/new" method = "get">
            <Input type="Submit" value="Signup"></Input>
        </form> 
      </div>
