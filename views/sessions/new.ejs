     <div class="login-area">
     <h1>Login</h1>
    <form action="/sessions" method="POST">
      <label class="name-label" for="name">Name:</label>
      <input class="name-input" type="text" name="name" id="name" /><br>
        
      <label class="email-label" for="email">Email:</label>
      <input class="email-input" type="email" name="email" id="email" /><br>

      <label class="pass-label" for="password">Password:</label>
      <input class="pass-input" type="password" name="password" id="password" /><br>

      <input class="login-submit" type="submit" value="Login" />
    </form>
    </div>
    </div>
