<body class="register">
    <div class="register-container">
        <nav class="reg-nav">
        <form class="home" action="/" method="get">
            <Input type="Submit" value="Home"></Input>
        </form>
        <form action="/sessions/new" method="get">
            <Input type="Submit" value="Login"></Input>
        </form>
        </nav>
    <h1>Register</h1>
    <form action="/users" method="POST">
        <label class="reg-name-label" for="name">Name:</label>
        <input class="reg-name-input" type="text" name="name" id="name" /><br>

        <label class="reg-email-label" for="email">Email:</label>
        <input class="reg-email-input" type="email" name="email" id="email" /><br>

        <label class="reg-pass-label" for="password">Password:</label>
        <input class="reg-pass-input" type="password" name="password" id="password" /><br>

        <input class="reg-sub" type="submit" value="Register" />
    </form>
    </div>
</body>

</html>